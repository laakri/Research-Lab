{% extends 'base.html.twig' %}

{% block title %}All Projects{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">All Projects</h1>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for project in fakeProjects %}
                <tr>
                    <td>{{ project.id }}</td>
                    <td>{{ project.name }}</td>
                    <td>{{ project.description }}</td>
                    <td>
                        <button type="button" class="btn btn-info btn-sm">Add</button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
