	 <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
            text-align: center;
        }
 
        h1 {
            color: green;
        }
 
        canvas {
            border: 2px solid #858080;
        }
    </style>
	<div class="container rounded bg-white mt-5 mb-5">
		<div class="row">
			<div class="col-md-3 border-right">
				<div class="d-flex flex-column align-items-center text-center p-3 py-5">
					<h1>Project Title</h1>
					<span class="font-weight-bold">{{projects.name}}
					</span>
					<span class="text-black-50">Zbidi chaima</span>
					
			</br>
			<button type="button" class="btn btn-success btn-rounded" data-mdb-ripple-init>Modifier</button>
			<button type="button" class="btn btn-danger btn-rounded" data-mdb-ripple-init>Supprimer</button>
		</div>
	</div>
	<div class="col-md-5 border-right">
		<div class="p-3 py-5">
		<h1>Equipment</h1>
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Equipment</th>
						
					</tr>
				</thead>
			<tbody>
    {% for equipment in equipments %}
        {% for eq in equip %}
            {% if eq.id == equipment.equipID and equipment.projID == projects.id %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ eq.name }}</td>
                </tr>
            {% endif %}
        {% endfor %}
    {% endfor %}
</tbody>

		

			</table>
		</div>
	</div>
	<div class="col-md-4">
		<div class="p-3 py-5">
			<div class="d-flex justify-content-between align-items-center experience">
				<h4 class="text-right">
					chercheur</h4>
				<span class="border px-3 p-1 add-experience">
					<i class="fa fa-plus"></i>&nbsp;Chercheur</span>
			</div><br>
			<table class="table lo">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Chercheur</th>
						<th scope="col">Gestion</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th scope="row">1</th>
						<td>chaima zbidi</td>
						<td>
							<button type="button" class="btn btn-danger btn-floating" data-mdb-ripple-init>
								<i class="fas fa-plus"></i>
							</button>
						</td>
					</tr>
					<tr>
						<th scope="row">2</th>
						<td>saif eddin jlassi</td>
						<td>
							<button type="button" class="btn btn-danger btn-floating" data-mdb-ripple-init>
								<i class="fas fa-plus"></i>
							</button>
						</td>
					</tr>

				</tbody>
			</table>

		</div>


	</div>
    <div>
<h1>Etat d'avencement</h1> 
    <canvas id="myLineChart"
            width="380" height="180">
      </canvas>
 
    <script>
        // data for showing the line chart
        let labels = ['Lundi', 'Mardi', 
                      'Mercredi', 'Jeudi', 'Vendredi'];
        let dataset1Data = [10, 25, 13, 18, 30];
        let dataset2Data = [20, 15, 28, 22, 10];
 
        // Creating line chart
        let ctx = 
            document.getElementById('myLineChart').getContext('2d');
        let myLineChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Programme',
                        data: dataset1Data,
                        borderColor: 'blue',
                        borderWidth: 2,
                        fill: false,
                    },
                    {
                        label: 'Publication scientifique',
                        data: dataset2Data,
                        borderColor: 'red',
                        borderWidth: 2,
                        fill: false,
                    },
                   
                ]
            },
            options: {
                responsive: true,
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Jours',
                            font: {
                                padding: 4,
                                size: 20,
                                weight: 'bold',
                                family: 'Arial'
                            },
                            color: 'darkblue'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Values',
                            font: {
                                size: 20,
                                weight: 'bold',
                                family: 'Arial'
                            },
                            color: 'darkblue'
                        },
                        beginAtZero: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Values',
                        }
                    }
                }
            }
        });
    </script>
 

<div>

</div>
</div>
</div>

</div>

</div>

